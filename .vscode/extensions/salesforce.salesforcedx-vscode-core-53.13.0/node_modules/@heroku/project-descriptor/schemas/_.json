{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://buildpacks.io/schemas/project-descriptor.json",
  "title": "Project Descriptor",
  "description": "A project descriptor is a file that MAY contain configuration for apps, services, functions, and buildpacks.",

  "definitions": {
    "api-version": {
      "type": "string",
      "pattern": "^[0-9]+.[0-9]+$"
    }
  },

  "type": "object",
  "required": ["_"],
  "properties": {
    "_": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema-version"],
      "properties": {
        "schema-version": {
          "$ref": "#/definitions/api-version"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "documentation-url": {
          "type": "string",
          "format": "uri"
        },
        "source-url": {
          "type": "string",
          "format": "uri"
        },
        "licenses": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "uri": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "metadata": {
          "type": "object"
        }
      }
    }
  }
}
