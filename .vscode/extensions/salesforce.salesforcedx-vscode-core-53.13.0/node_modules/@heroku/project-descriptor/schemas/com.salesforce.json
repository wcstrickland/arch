{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salesforce.com/schemas/com.salesforce.json",
  "title": "com.salesforce Project Descriptor",
  "description": "com.salesforce table in the Project Descriptor",
  "type": "object",
  "required": ["com"],
  "properties": {
    "com": {
      "type": "object",
      "required": ["salesforce"],
      "properties": {
        "salesforce": {
          "type": "object",
          "required": ["id", "schema-version", "type"],
          "properties": {
            "schema-version": {
              "$ref": "https://buildpacks.io/schemas/project-descriptor.json#/definitions/api-version"
            },
            "id": {
              "type": "string",
              "maxLength": 30,
              "pattern": "^[a-z][a-z0-9]*$"
            },
            "description": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["function"]
            }
          }
        }
      }
    }
  }
}
